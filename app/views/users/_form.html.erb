<div class="col-md-5">
<%= form_for user do |f| %>
   <div class="container">
       <div class="fixed-top">
           <div class="col-md-2">
               <div class="form-group">
                   <div class="form-group" placeholder="First Name">
                     <%= f.text_field :first_name, placeholder: "First Name"%>
                   </div>
                   <div class="form-group" placeholder="Last Name">
                       <%= f.text_field :last_name, placeholder: "Last Name" %>
                   </div>
                   <div class="form-group">
                       <%= f.text_field :user_name, placeholder: "User Name" %>
                   </div>
                   <div class="form-group">
                       <%= f.password_field :password, placeholder: "Password" %>
                   </div>
                   <div class="form-group">
                       <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
                   </div>

                   <style >
                    .white-color {
                      color: white;
                    }
                   </style>
                   <div class="white-color" <%= f.label :image_url, "Upload Pic" %>
                      <%= f.file_field :image_url%>
                   </div>
                   <center><%= f.button :submit, :class => 'user_create'  %></center>
               </div>
       </div>
   </div>
<% end %>
